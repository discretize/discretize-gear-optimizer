{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": 1,
        "no-prototype-builtins": "off",
        "linebreak-style": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "MemberExpression": 1
            }
        ],
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "comma-spacing": "warn",
        "no-shadow": "off",
        "space-before-function-paren": "warn",
        "id-length": "off",
        "dot-notation": "off",
        "no-unused-vars": [
            "error",
            {
                "vars": "local"
            }
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "comma-dangle": "warn",
        "space-in-parens": "warn",
        "multiline-ternary": [
            "warn", 
            "always-multiline"
        ],
        "eqeqeq": [
            "warn",
            "smart"
        ],
        "quotes": [
            "warn",
            "single", 
            {
                "avoidEscape": true,
                "allowTemplateLiterals": false
                }
            ],
        "spaced-comment": "warn",
        "no-multi-spaces": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ]
    }
}