{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "ignorePatterns": [
        "gulpfile.js"
    ],
    "extends": "semistandard",
    "rules": {
        "padded-blocks": "off",
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "no-throw-literal": "off",
        "dot-notation": "off",
        "no-unused-vars": "warn",
        "max-len": [
            "warn",
            { 
                "code": 100,
                "ignoreComments": true
            }
        ],
        "no-lonely-if": "warn",
        "radix": "warn",
        "default-case": "warn",
        "no-param-reassign": [
            "warn", 
            { 
                "props": false 
            }
        ],
        "no-else-return": "warn",
        "no-shadow": "warn",
        //"no-console": "warn",
        // "func-names": [
        //     "warn",
        //     "as-needed"
        // ],
        "consistent-return": "warn",
        "object-shorthand": "warn",
        "guard-for-in": "warn"
    }
}