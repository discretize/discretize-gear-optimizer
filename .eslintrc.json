{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "ignorePatterns": [
        "gulpfile.js"
    ],
    "extends": "semistandard",
    "rules": {
        "padded-blocks": "off",
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "no-throw-literal": "off",
        "dot-notation": "off",
        "no-prototype-builtins": "off",
        "wrap-iife": "off",
        "no-unused-vars": "warn",
        "max-len": [
            "warn",
            { 
                "code": 100,
                "ignoreComments": true
            }
        ],
        "no-lonely-if": "warn"
    }
}